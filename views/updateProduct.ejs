    <section class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

        <h1>Update Product</h1>
        <p>Edit Product details below to add new product</p>
        <hr>

        <form method="POST" action="/api/products/<%=product.id%>" >

            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="productName">Product Name</label>
                    <input type="text" id="productName" placeholder="Enter Product Name"
                        class="form-control" value="<%=product.productName%>" name="productName"/>
                </div>
            </div>
            <!-- Product image -->
            <!-- <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label>Select Image File:</label>
                    <input type="file" name="image">
                    <input type="submit" name="submit" value="Upload">
                </div>
            </div> -->
            <!-- Product image -->
            <div class="d-flex flex-row align-items-center mb-4">
                <label>Past image URL</label> <br>
                <input type="text" name="image" placeholder="Paste image URL" value="<%=product.image%>">
            </div>

            <!-- brand -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="brand">Brand</label>
                    <input type="text" id="brand" name="brand" placeholder="Brand" class="form-control" value="<%= product.brand %>"/>
                </div>
            </div>
            <!-- Category -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="category">Category</label>
                    <input type="text" name="category" id="category" value="<%= product.category %>" placeholder="Category" class="form-control" />
                </div>
            </div>
            <!-- description -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="Description">Description</label>
                    <input type="text" id="description" name="description" value="<%= product.description %>" placeholder="Describe Product"
                        class="form-control" />
                </div>
            </div>
            <!-- price -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="price">Price</label>
                    <input type="number" id="price" name="price" value="<%= product.price %>" placeholder="Price" class="form-control" />
                </div>
            </div>
            <!-- countInStock -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="countInStock">Count In Stock</label>
                    <input type="number" name="countInStock" value="<%=product.countInStock%>" id="countInStock" placeholder="Count In Stock"
                        class="form-control" />
                </div>
            </div>
            <!-- rating -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="number" name="rating" value="<%=product.rating%>" id="rating" placeholder="Rating" class="form-control" />
                </div>
            </div>
            <!-- numReviews -->
            <div class="d-flex flex-row align-items-center mb-4">
                <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="numReviews">Reviews</label>
                    <input type="number" name="numReviews" value="<%=product.numReviews%>" id="numReviews" placeholder="Rating" class="form-control" />
                </div>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
    </div>
