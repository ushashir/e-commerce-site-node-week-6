<body>
    <!-- Move to up button -->
    <div class="scroll-button">
        <a href="/"><i class="fas fa-arrow-up"></i></a>
    </div>
    <!-- navgaition menu -->
    <nav>
        <div class="navbar">
            <div class="logo"><a href="index.html">Nawill Stores</a></div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
